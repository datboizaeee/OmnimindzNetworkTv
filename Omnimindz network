    <script>
        // Set copyright year
        document.getElementById('omniYear').textContent = new Date().getFullYear();

        // Payment Gateway System
        let selectedPackageData = {};

        function openPaymentModal(packageName, price, period) {
            selectedPackageData = { packageName, price, period };
            document.getElementById('selectedPackage').textContent = `${packageName} - $${price} (${period})`;
            document.getElementById('paymentModal').classList.add('active');
            document.body.style.overflow = 'hidden';
        }

        function closePaymentModal() {
            document.getElementById('paymentModal').classList.remove('active');
            document.body.style.overflow = 'auto';
        }

        // Payment Methods
        function requestStripeLink() {
            const { packageName, price, period } = selectedPackageData;
            const whatsappMsg = `Hi! I'd like to purchase the ${packageName} package ($${price} - ${period}) via Credit Card/Stripe. Please send me the secure payment link. Thank you!`;
            window.open(`https://wa.me/12108187633?text=${encodeURIComponent(whatsappMsg)}`, '_blank');
            showPaymentConfirmation('Credit Card', 'Our team will send you a secure Stripe payment link via WhatsApp within 5 minutes.');
        }

