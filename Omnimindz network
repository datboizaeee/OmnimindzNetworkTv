        function showPaymentConfirmation(method, message) {
            closePaymentModal();
            
            const notification = document.createElement('div');
            notification.style.cssText = `
                position: fixed;
                top: 50%;
                left: 50%;
                transform: translate(-50%, -50%);
                background: linear-gradient(135deg, rgba(0, 255, 255, 0.95), rgba(255, 0, 128, 0.95));
                color: #000;
                padding: 3rem;
                border-radius: 25px;
                font-family: 'Orbitron', monospace;
                text-align: center;
                z-index: 10005;
                backdrop-filter: blur(30px);
                box-shadow: 0 0 50px rgba(0, 255, 255, 0.8);
                max-width: 400px;
                width: 90%;
                animation: fadeInScale 0.5s ease;
            `;
            
            notification.innerHTML = `
                <div style="font-size: 3rem; margin-bottom: 1rem;">‚úÖ</div>
                <h3 style="margin-bottom: 1rem; font-size: 1.5rem;">${method} Request Sent!</h3>
                <p style="margin-bottom: 2rem; line-height: 1.6; font-size: 1rem; color: #333;">${message}</p>
                <p style="font-size: 0.9rem; color: #555; margin-bottom: 1.5rem;">Check your WhatsApp for payment details.</p>
                <button onclick="this.parentElement.remove()" 
                        style="background: #25D366; color: white; border: none; border-radius: 15px; padding: 1rem 2rem; font-weight: bold; cursor: pointer; font-size: 1rem;">
                    Got It! üëç
                </button>
            `;
            
            document.body.appendChild(notification);
            
            // Auto-remove after 10 seconds
            setTimeout(() => {
                if (notification.parentElement) {
                    notification.remove();
                }
            }, 10000);
        }

        // Loading screen - Force hide after 3 seconds maximum
        window.addEventListener('load', function() {
            // Hide loading screen after 1.5 seconds
            setTimeout(() => {
                document.getElementById('loadingOverlay').classList.add('hidden');
            }, 1500);
        });

        // Backup - Force hide loading if it's still showing after 3 seconds
        setTimeout(() => {
            const loader = document.getElementById('loadingOverlay');
            if (loader && !loader.classList.contains('hidden')) {
                loader.classList.add('hidden');
                console.log('üîß Loading screen force-hidden after timeout');
            }
        }, 3000);

        // Header scroll effect
        window.addEventListener('scroll', function() {
            const header = document.getElementById('header');
            if (window.scrollY > 50) {
                header.classList.add('scrolled');
            } else {
                header.classList.remove('scrolled');
            }
        });

        // Smooth scrolling
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });

        // 4D Hypercube Background Animation (Optional - won't block loading)
        function init4DHypercube() {
            try {
                // Check if Three.js is available
                if (typeof THREE === 'undefined') {
                    console.log('Three.js not loaded, skipping 4D hypercube');
                    return;
                }

                const container = document.getElementById('hypercube-background');
                if (!container) {
                    console.log('Hypercube container not found');
                    return;
                }
                
                const scene = new THREE.Scene();
                const camera = new THREE.PerspectiveCamera(75, window.innerWidth/window.innerHeight, 0.1, 1000);
                camera.position.z = 5;

                const renderer = new THREE.WebGLRenderer({ 
                    antialias: true, 
                    alpha: true,
                    premultipliedAlpha: false
                });
                renderer.setSize(window.innerWidth, window.innerHeight);
                renderer.setClearColor(0x000000, 0);
                container.appendChild(renderer.domElement);

                const vertices4D = [];
                for (let i = 0; i < 16; i++) {
                    const x = (i & 1) ? 1 : -1;
                    const y = (i & 2) ? 1 : -1;
                    const z = (i & 4) ? 1 : -1;
                    const w = (i & 8) ? 1 : -1;
                    vertices4D.push([x, y, z, w]);
                }

                let lines = [];
                let hue = 0;

                function project4Dto3D([x, y, z, w]) {
                    const scale = 1 / (2 - w);
                    return new THREE.Vector3(x * scale, y * scale, z * scale);
                }

                function createEdges() {
                    lines.forEach(line => scene.remove(line));
                    lines = [];

                    const color = new THREE.Color();
                    color.setHSL(hue, 1.0, 0.5);

                    const material = new THREE.LineBasicMaterial({
                        color: color,
                        transparent: true,
                        opacity: 0.6,
                        linewidth: 2
                    });

                    for (let i = 0; i < vertices4D.length; i++) {
                        for (let j = i + 1; j < vertices4D.length; j++) {
                            const diff = vertices4D[i].map((v, k) => Math.abs(v - vertices4D[j][k]));
                            const dist = diff.reduce((a, b) => a + b, 0);
                            if (dist === 2) {
                                const geometry = new THREE.BufferGeometry().setFromPoints([
                                    project4Dto3D(vertices4D[i]),
                                    project4Dto3D(vertices4D[j])
                                ]);
                                const line = new THREE.Line(geometry, material);
                                scene.add(line);
                                lines.push(line);
                            }
                        }
                    }
                }

                function rotate4D(a, b, angle) {
                    for (let i = 0; i < vertices4D.length; i++) {
                        const va = vertices4D[i][a];
                        const vb = vertices4D[i][b];
                        vertices4D[i][a] = va * Math.cos(angle) - vb * Math.sin(angle);
                        vertices4D[i][b] = va * Math.sin(angle) + vb * Math.cos(angle);
                    }
                }

                function animate() {
                    requestAnimationFrame(animate);
                    rotate4D(0, 3, 0.008);
                    rotate4D(1, 2, 0.008);
                    rotate4D(0, 2, 0.004);

                    hue += 0.001;
                    if (hue > 1) hue = 0;

                    createEdges();
                    renderer.render(scene, camera);
                }

                function handleResize() {
                    camera.aspect = window.innerWidth / window.innerHeight;
                    camera.updateProjectionMatrix();
                    renderer.setSize(window.innerWidth, window.innerHeight);
                }

                window.addEventListener('resize', handleResize);
                animate();
                console.log('üåå 4D Hypercube background: ACTIVE');

            } catch (error) {
                console.log('4D Hypercube initialization failed, website continues normally:', error);
                // Don't let hypercube errors affect the main site
            }
        }

        // Initialize 4D Hypercube after a delay (non-blocking)
        setTimeout(() => {
            init4DHypercube();
        }, 2000);

        // Add fadeInScale animation
        const style = document.createElement('style');
        style.textContent = `
            @keyframes fadeInScale {
                0% { opacity: 0; transform: translate(-50%, -50%) scale(0.5); }
                100% { opacity: 1; transform: translate(-50%, -50%) scale(1); }
            }
        `;
        document.head.appendChild(style);

        console.log('üöÄ OmnimindzNetworkTv - Complete platform loaded');
        console.log('üí≥ Payment gateway: READY');
        console.log('üì± WhatsApp: +1 (210) 818-7633');
        console.log('üìß Email: omnimindz734@gmail.com');
    </script>
